<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Welcome to your Profile</h3>
    </div>
    <div class="card col-6 offset-3">
        <div class="card-body">
            <% if (userProfile) { %>
                <p class="card-text">
                    Name: <%= userProfile.name || "N/A" %> <br>
                    Address: <%= userProfile.address || "N/A" %> <br>
                    City: <%= userProfile.city || "N/A" %> <br>
                    State: <%= userProfile.state || "N/A" %> <br>
                    Postal Code: <%= userProfile.postalcode || "N/A" %> <br>
                    Phone Number: <%= userProfile.phonenumber || "N/A" %> <br>
                </p>
            <% } else { %>
                <p class="card-text">
                    No profile created. Please create your profile.
                </p>
                <a href="/user/profile" class="btn edit-btn edit-btn">Create Profile</a>
            <% } %>
        </div>
    </div>
    <br>
</div>
